<link rel="stylesheet" type="text/css" href="{{ theme_url }}/css/owl.carousel.css">
<link rel="stylesheet" type="text/css" href="{{ theme_url }}/css/owl.theme.css">
<script type="text/javascript" src="{{ theme_url }}/js/owl.carousel.js"></script>

<style type="text/css">
	.work-slider {
		padding: 30px 24px;
	}
	.loading::after {
		display: none;
	}
	.owl-theme .owl-controls {
		margin-top: 0;
	    text-align: center;
	}
	.owl-theme .owl-pagination {
	    position: absolute;
	    bottom: 10px;
	    left: 50%;
	    transform: translateX(-50%);
	}
	.owl-theme .owl-pagination .owl-page {
		margin-bottom: 0.725rem;
	}
	.owl-theme .owl-pagination .owl-page span {
		width: 6px;
		height: 6px;
		background: #000;
		opacity: 0.5;
		line-height: 32px;
		margin: 23px 10px;
	}
	.owl-theme .owl-controls .owl-buttons .owl-prev {
	    position: absolute;
	    left: 0;
	    top: 50%;
	    transform: translateY(-50%);
        padding: 6px 24px;
        background: transparent;
        opacity: 1;
	}
	.owl-theme .owl-controls .owl-buttons .owl-next {
	    position: absolute;
	    right: 0;
	    top: 50%;
	    transform: translateY(-50%);
        padding: 6px 24px;
        background: transparent;
        opacity: 1;
	}
	.owl-theme .owl-buttons svg {
		width: 18px;
	    color: #f1f1f1;
	}
</style>
{% if slider_images %}
<div class="container">
	<div class="work-slider">
		<div class="owl-carousel">
		{% set count = 0 %}
		{% for slider_image in slider_images %}
			{% set count = count + 1 %}
			{% set image = page.media[slider_image['image']] %}
			<img class="lazyOwl" data-src="{{ image.url }}" srcset="{{ image.url }} 1200w, {{ image.url }} 1024w, {{ image.url }} 969w, {{ image.url }} 768w, {{ image.url }} 640w, {{ image.url }} 480w, {{ image.url }} 320w" data-sizes="auto" alt="{{ page.parent.title }} Carousel Item {{ count }}">
		{% endfor %}
		</div>
	</div>
</div>


<script type="text/javascript">
	var owl = $('.owl-carousel');
	owl.owlCarousel({
		loop: true,
	    items: 1,
	    lazyLoad: true,
	    navigation : true,
	    navigationText: ['<svg aria-hidden="true" data-prefix="fas" data-icon="chevron-left" class="svg-inline--fa fa-chevron-left fa-w-10 textWhite" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><path fill="currentColor" d="M34.52 239.03L228.87 44.69c9.37-9.37 24.57-9.37 33.94 0l22.67 22.67c9.36 9.36 9.37 24.52.04 33.9L131.49 256l154.02 154.75c9.34 9.38 9.32 24.54-.04 33.9l-22.67 22.67c-9.37 9.37-24.57 9.37-33.94 0L34.52 272.97c-9.37-9.37-9.37-24.57 0-33.94z"></path></svg>','<svg aria-hidden="true" data-prefix="fas" data-icon="chevron-right" class="svg-inline--fa fa-chevron-right fa-w-10 textWhite" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><path fill="currentColor" d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z"></path></svg>']
	});
</script>

{% endif %}